{
  "name": "pwf-web",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:wasm": "cd .. && wasm-pack build crates/pwf-wasm --target web --out-dir ../../web/src/wasm --release && node web/fix-wasm-jsdoc.js",
    "build:web": "vite build",
    "build": "npm run build:wasm && npm run build:web",
    "preview": "vite preview",
    "test": "vitest",
    "lint": "eslint . --ext .ts,.svelte",
    "format": "prettier --write 'src/**/*.{ts,svelte,css}'"
  },
  "dependencies": {
    "@pwf-dev/core": "^0.1.1",
    "chart.js": "^4.4.0",
    "leaflet": "^1.9.4",
    "lz-string": "^1.5.0",
    "monaco-editor": "^0.45.0",
    "svelte": "^4.2.0",
    "svelte-chartjs": "^3.1.0",
    "svelte-dnd-action": "^0.9.68",
    "svelte-leafletjs": "^0.10.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@testing-library/svelte": "^5.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@tsconfig/svelte": "^5.0.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.55.0",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.3.0",
    "prettier": "^3.1.0",
    "prettier-plugin-svelte": "^3.1.0",
    "svelte-check": "^3.6.0",
    "svelte-preprocess": "^6.0.3",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-wasm": "^3.3.0",
    "vitest": "^1.0.0"
  }
}
